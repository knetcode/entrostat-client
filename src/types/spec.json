    "/api/otp/send": {
      "post": {
        "tags": [
          "OTP"
        ],
        "description": "Send a new OTP or resend existing OTP if within resend window",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "description": "Request to send an OTP to the user's email address",
                "title": "Send OTP Request",
                "type": "object",
                "properties": {
                  "email": {
                    "default": "test@example.com",
                    "description": "Email address",
                    "title": "Email",
                    "type": "string",
                    "maxLength": 255,
                    "format": "email",
                    "pattern": "^(?!\\.)(?!.*\\.\\.)([A-Za-z0-9_'+\\-\\.]*)[A-Za-z0-9_+-]@([A-Za-z0-9][A-Za-z0-9\\-]*\\.)+[A-Za-z]{2,}$"
                  }
                },
                "required": [
                  "email"
                ],
                "additionalProperties": false
              }
            }
          },
          "required": true,
          "description": "Request to send an OTP to the user's email address"
        },
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "default": true,
                      "type": "boolean",
                      "enum": [
                        true
                      ]
                    },
                    "message": {
                      "default": "OTP sent successfully",
                      "type": "string"
                    }
                  },
                  "required": [
                    "success",
                    "message"
                  ],
                  "additionalProperties": false
                }
              }
            }
          },
          "400": {
            "description": "Error response for send/resend/verify OTP",
