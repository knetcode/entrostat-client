              "application/json": {
                "schema": {
                  "description": "Error response for send/resend/verify OTP",
                  "title": "Error Response",
                  "type": "object",
                  "properties": {
                    "success": {
                      "default": false,
                      "type": "boolean",
                      "enum": [
                        false
                      ]
                    },
                    "message": {
                      "default": "Invalid email format",
                      "type": "string"
                    },
                    "errors": {
                      "default": [
                        {
                          "code": "invalid_email",
                          "path": [
                            "email"
                          ],
                          "message": "Invalid email format"
                        }
                      ],
                      "type": "array",
                      "items": {
                        "description": "Individual validation error item",
                        "title": "Error Item",
                        "type": "object",
                        "properties": {
                          "code": {
                            "default": "invalid_string",
                            "type": "string"
                          },
                          "path": {
                            "default": [
                              "email"
                            ],
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          },
                          "message": {
                            "default": "Invalid email format",
                            "type": "string"
                          }
                        },
                        "required": [
                          "code",
                          "path",
                          "message"
                        ],
                        "additionalProperties": false
                      }
                    }
                  },
                  "required": [
                    "success",
                    "message",
                    "errors"
                  ],
                  "additionalProperties": false
                }
              }
            }
          },
          "429": {
            "description": "Rate limit response",
            "content": {
              "application/json": {
                "schema": {
                  "description": "Rate limit response",
                  "title": "Rate Limit Response",
                  "type": "object",
                  "properties": {
                    "success": {
                      "default": false,
                      "type": "boolean",
