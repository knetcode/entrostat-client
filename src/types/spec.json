    "/api/otp/verify": {
      "post": {
        "tags": [
          "OTP"
        ],
        "description": "Verify an OTP code",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "description": "Request to verify an OTP",
                "title": "Verify OTP Request",
                "type": "object",
                "properties": {
                  "email": {
                    "default": "test@example.com",
                    "description": "Email address",
                    "title": "Email",
                    "type": "string",
                    "maxLength": 255,
                    "format": "email",
                    "pattern": "^(?!\\.)(?!.*\\.\\.)([A-Za-z0-9_'+\\-\\.]*)[A-Za-z0-9_+-]@([A-Za-z0-9][A-Za-z0-9\\-]*\\.)+[A-Za-z]{2,}$"
                  },
                  "otp": {
                    "default": "123456",
                    "description": "OTP code",
                    "title": "OTP",
                    "type": "string",
                    "pattern": "^\\d{6}$"
                  }
                },
                "required": [
                  "email",
                  "otp"
                ],
                "additionalProperties": false
              }
            }
          },
          "required": true,
          "description": "Request to verify an OTP"
        },
        "responses": {
          "200": {
            "description": "Success response for verify OTP",
            "content": {
              "application/json": {
                "schema": {
                  "description": "Success response for verify OTP",
                  "title": "Verify Success Response",
                  "type": "object",
                  "properties": {
                    "success": {
                      "default": true,
                      "type": "boolean",
                      "enum": [
                        true
                      ]
                    },
                    "valid": {
                      "default": true,
                      "type": "boolean",
                      "enum": [
                        true
                      ]
                    },
                    "message": {
                      "default": "OTP verified successfully",
                      "type": "string"
