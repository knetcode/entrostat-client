                        false
                      ]
                    },
                    "message": {
                      "default": "Invalid email format",
                      "type": "string"
                    },
                    "errors": {
                      "default": [
                        {
                          "code": "invalid_email",
                          "path": [
                            "email"
                          ],
                          "message": "Invalid email format"
                        }
                      ],
                      "type": "array",
                      "items": {
                        "description": "Individual validation error item",
                        "title": "Error Item",
                        "type": "object",
                        "properties": {
                          "code": {
                            "default": "invalid_string",
                            "type": "string"
                          },
                          "path": {
                            "default": [
                              "email"
                            ],
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          },
                          "message": {
                            "default": "Invalid email format",
                            "type": "string"
                          }
                        },
                        "required": [
                          "code",
